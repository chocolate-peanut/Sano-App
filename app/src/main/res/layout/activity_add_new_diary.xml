<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddNewDiary"

        android:orientation="vertical"
        android:background="#F8EEE7">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/add_diary_title"
            android:text="Write down anything: "
            android:textSize="25dp"
            android:textStyle="bold"
            android:gravity="left"
            android:textColor="@color/black"
            android:layout_margin="20dp">
    </TextView>


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_margin="10dp">
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/write_anything"
                    android:hint="Write Anything that You Want"
                    android:background="#49274A"
                    android:padding="10dp"
                    android:layout_margin="10dp">
            </EditText>


</LinearLayout>